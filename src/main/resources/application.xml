<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                             http://www.springframework.org/schema/beans/spring-beans.xsd
                             http://www.springframework.org/schema/context
                             http://www.springframework.org/schema/context/spring-context-4.0.xsd">
    <context:property-placeholder location="classpath:application.properties"/>
    <context:annotation-config/>
    <!--        <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">-->
    <!--        <property name="locations" value="classpath:application.properties"/>-->
    <!--    </bean>-->
<!--    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor" />-->
    <bean class="core.rybina.bfpp.InjectBeanPostProcessor" />
    <bean class="core.rybina.bfpp.TransactionBeanPostProcessor" />
    <bean class="core.rybina.bfpp.AuditBeanPostProcessor" />
    <bean class="core.rybina.bfpp.LogBeanFactoryPostProcessor"/>
    <bean class="core.rybina.bfpp.VerifyPropertyLogBeanFactoryPostProcessor"/>
    <bean id="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="${db.driver}"/>
    </bean>
    <bean id="companyRepository" class="core.rybina.database.pool.CompanyRepository"/>
    <bean id="rybina1" class="core.rybina.database.ConnectionPool" />
    <bean id="rybina2" class="core.rybina.database.ConnectionPool">
        <constructor-arg name="poolSize" index="1" value="${db.pool.size}"/>
        <constructor-arg name="username" index="0" type="java.lang.String" ref="driver"/>
        <constructor-arg>
            <list>
                <value>
                    --arg1=value1
                </value>
                <value>
                    --arg2=value2
                </value>
            </list>
        </constructor-arg>
        <constructor-arg name="properties">
            <!--            <map>-->
            <!--                <entry key="url" value="postgresurl"/>-->
            <!--                <entry key="password" value="12345"/>-->
            <!--                &lt;!&ndash;                    в ссылку на бин мы указываем айдишник бина/ альяс&ndash;&gt;-->
            <!--                <entry key="driver" value-ref="driver"/>-->
            <!--            </map>-->
            <null/>
        </constructor-arg>
        <property name="properties">
            <map>
                <entry key="url" value="postgresurl"/>
                <entry key="password" value="12345"/>
                <!--                    в ссылку на бин мы указываем айдишник бина/ альяс-->
                <entry key="driver" value-ref="driver"/>
                <entry key="test1" value="#{driver.toString() + 'kikiki'}"/>
                <entry key="test2" value="#{'${db.hosts}'.split(',')}"/>
            </map>
        </property>
    </bean>
</beans>